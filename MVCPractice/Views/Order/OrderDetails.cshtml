@using System.Security.Claims
@using Microsoft.IdentityModel.Tokens
@model OrderHeader

<div class="container py-4">
    <h2 class="mb-3">📝 Order Details</h2>

    <!-- Order Summary -->
    <div class="card shadow-sm mb-4 rounded-4">
        <div class="card-body">
            <h4 class="card-title">Order Summary</h4>
            <p><strong>Order Id:</strong> @Model.Id</p>
            <p><strong>Order Date:</strong> @Model.OrderDate.ToString("yyyy-MM-dd")</p>
            <p>
                <strong>Status:</strong>
                <span class="badge bg-info">@Model.OrderStatus</span>
            </p>
            <p>
                <strong>Payment:</strong>
                <span class="badge bg-warning">@Model.PaymentStatus</span>
            </p>
            <p>
                <strong>Address:</strong>
                <span class="badge bg-primary">@Model.ShippingAddress</span>

            </p>

          
            <p><strong>Total Amount:</strong> <span class="text-success fw-bold">@Model.OrderTotal.ToString("N2") tk</span></p>
        </div>


        @if (User.FindFirstValue(ClaimTypes.Role) == SD.Role_Admin)
        {
            <div class="row m-2">
                <form method="post" class="d-flex align-items-center">
                    <div class="col-6">
                        <select asp-for="OrderStatus" class="form-control">
                            <option disabled selected>-- Select Status --</option>
                            <option value="@SD.StatusPending">@SD.StatusPending</option>
                            <option value="@SD.StatusConfirmed">@SD.StatusConfirmed</option>
                            <option value="@SD.StatusShipped">@SD.StatusShipped</option>
                            <option value="@SD.StatusDelivered">@SD.StatusDelivered</option>
                        </select>
                    </div>

                    <div class="col-4">
                        <button type="submit" class="btn btn-primary rounded-pill px-4 ms-2">
                            Update Status
                        </button>
                    </div>
                </form>
            </div>

        }
     
       
    </div>

    <!-- Order Items -->
    <div class="card shadow-sm rounded-4">
        <div class="card-body">
            <h4 class="card-title mb-3">Products</h4>
            <table class="table table-bordered">
                <thead class="table-light">
                    <tr>
                        <th>Image</th>
                        <th>Product</th>
                        <th>Quantity</th>
                        <th>Price</th>
                        <th>Subtotal</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.OrderDetails)
                    {
                        <tr>
                            <td>
                                <img src="@item.Product.ImageUrl" width="80" height="122" class="rounded" />
                            </td>
                            <td>@item.Product.Name</td>
                            <td>@item.Count</td>
                            <td>@item.Price.ToString("N2") tk</td>
                            <td>@( (item.Price * item.Count).ToString("N2") ) tk</td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="mt-3">
        @if (User.FindFirstValue(ClaimTypes.Role)==SD.Role_Employee)
        {
            <a asp-action="Index" class="btn btn-secondary rounded-pill px-4">⬅ Back to Orders</a>
        }
       else{
            <a asp-action="OrderDetailsAdmin" class="btn btn-secondary rounded-pill px-4">⬅ Back to Orders</a>

        }
    </div>
</div>
