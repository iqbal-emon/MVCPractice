<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MVCPractice</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MVCPractice.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src=".//Static/Logo.png" style="height:50px;width:50px;" class="rounded" /></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">

                  
                    <ul class="navbar-nav flex-grow-1">
                        @if(User.IsInRole("Admin")){
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Category" asp-action="Index">Category</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="Index">Product</a>
                        </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Order" asp-action="OrderDetailsAdmin">All Order</a>
                            </li>
                        }
                        else
                        @if (User.IsInRole("Employe")){

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Order" asp-action="Index">Orders</a>
                        </li>
                        }
                       

                        <partial name="_loginPartial" />

                    </ul>
                </div>

            </div>
        </nav>
    </header>
    <div class="container ">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-dark text-light pt-5 pb-3 mt-auto">
        <div class="container">
            <div class="row">

                <!-- Logo & About -->
                <div class="col-md-3 mb-4">
                    <h4 class="fw-bold text-white">MyShopping</h4>
                    <p class="small">
                        Your one-stop shop for fashion, electronics, and more.
                        Discover great deals and fast delivery at ShopEase.
                    </p>
                </div>

                <!-- Quick Links -->
                <div class="col-md-3 mb-4">
                    <h5 class="fw-bold text-white">Quick Links</h5>
                    <ul class="list-unstyled small">
                        <li><a href="#" class="text-light text-decoration-none d-block mb-2">Home</a></li>
                        <li><a href="#" class="text-light text-decoration-none d-block mb-2">Shop</a></li>
                        <li><a href="#" class="text-light text-decoration-none d-block mb-2">About Us</a></li>
                        <li><a href="#" class="text-light text-decoration-none d-block">Contact</a></li>
                    </ul>
                </div>

                <!-- Customer Service -->
                <div class="col-md-3 mb-4">
                    <h5 class="fw-bold text-white">Customer Service</h5>
                    <ul class="list-unstyled small">
                        <li><a href="#" class="text-light text-decoration-none d-block mb-2">FAQs</a></li>
                        <li><a href="#" class="text-light text-decoration-none d-block mb-2">Returns & Refunds</a></li>
                        <li><a href="#" class="text-light text-decoration-none d-block mb-2">Shipping Info</a></li>
                        <li><a href="#" class="text-light text-decoration-none d-block">Order Tracking</a></li>
                    </ul>
                </div>

                <!-- Newsletter -->
                <div class="col-md-3 mb-4">
                    <h5 class="fw-bold text-white">Stay Connected</h5>
                    <p class="small">Subscribe to our newsletter for updates and offers.</p>
                    <form class="d-flex mb-3">
                        <input type="email" class="form-control me-2" placeholder="Enter email">
                        <button class="btn btn-warning text-dark" type="submit">Subscribe</button>
                    </form>
                    <div>
                        <a href="#" class="text-light me-3"><i class="fab fa-facebook"></i></a>
                        <a href="#" class="text-light me-3"><i class="fab fa-instagram"></i></a>
                        <a href="#" class="text-light me-3"><i class="fab fa-twitter"></i></a>
                        <a href="#" class="text-light"><i class="fab fa-linkedin"></i></a>
                    </div>
                </div>

            </div>

            <hr class="border-secondary">

            <div class="text-center small text-secondary">
                © 2025 MyShopping. All Rights Reserved.
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
