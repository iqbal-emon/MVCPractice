@model Category

<form method="post">
    <label asp-for="Name">Category Name:</label>
    <input type="text" id="Name" asp-for="Name" class="form-control" required>
    <label asp-for="OrderId">Order Id:</label>
    <input type="number" id="OrderId" asp-for="OrderId" class="form-control" required>
    <button type="submit" class="btn btn-primary">Create</button>

</form>