@model List<Product>
<div class="row ">
    <div class="col-6">
        <h2>Product List</h2>

    </div>
    <div class="col-6">
        <a class="btn btn-primary" asp-controller="Product" asp-action="Create" >Create New Product</a>
    </div>

</div>

<partial name="_Notification" />
<table class="table ">
    <thead>
        <tr>
        <th>
            Id
        </th>
        <th>
            Name
        </th>
        <th>Category Name</th>
        <th></th>
            <th></th>

        </tr>

    </thead>

    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td>@obj.Id</td>
                <td>@obj.Name</td>
                <td>@obj.Category?.Name</td>
                <td><a class="btn btn-primary" asp-controller="Product" asp-action="Edit" asp-route-id="@obj.Id">Edit</a></td>
                <td><a class="btn btn-danger" asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id">Delete</a></td>
            </tr>
        }
       
    </tbody>


</table>
