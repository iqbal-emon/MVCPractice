@model CategoryProductDto

<form method="post" enctype="multipart/form-data">
    @* <input type="hidden" asp-for="Id" /> *@
    
    <div class="form-group">
        <input asp-for="Product.Id" hidden class="form-control" required />

        <label asp-for="Product.Name">Product Name:</label>
        <input asp-for="Product.Name" class="form-control" required />


        <label asp-for="Product.Name">Category Name:</label>
        <select asp-for="Product.CategoryId" class="form-control">
            @foreach (var category in Model.CategoryList)
            {
                <option value="@category.Id">@category.Name</option>

            }
        </select>
        <label asp-for="Product.Description">Product Description:</label>
        <textarea id="Description"
                  asp-for="Product.Description"
                  class="form-control"
                  rows="4"
                  required>
                </textarea>

        <label asp-for="Product.Price">Product Price:</label>
        <input type="text" id="Price" asp-for="Product.Price" class="form-control" required>
        <div>
            <label>Current Image:</label><br />
            <img src="@Url.Content(Model.Product.ImageUrl)"
                 style="width:150px; height:150px; object-fit:cover;" />
        </div>

        <label asp-for="Product.ImageFile">Product Image:</label>
        <input type="file" id="Image" asp-for="Product.ImageFile" class="form-control" required>
    </div>

    <button type="submit" class="btn btn-primary mt-2 ">Edit</button>
    </form>
   
    