@model CategoryProductDto

<form method="post">
    <label asp-for="Product.Name">Product Name:</label>
    <input type="text" id="Name" asp-for="Product.Name" class="form-control" required>

    <label asp-for="Product.Name">Category Name:</label>
    <select asp-for="Product.CategoryId" class="form-control" >
        @foreach (var category in Model.CategoryList)
        {
            <option value="@category.Id">@category.Name</option>

        }

        
    </select>


    <button type="submit" class="btn btn-primary">Create</button>

</form>